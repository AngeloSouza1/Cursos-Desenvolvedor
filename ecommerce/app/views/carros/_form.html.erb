<form action="<%= carro.new_record? ? carros_criar_path : carros_alterar_path(@carro) %>" method="POST">









  <% unless carro.new_record? %>
    <input type="hidden" name="_method" value="put">
  <% end %>
 <div class="form-group">
        <strong>Nome</strong>: <input type="text" name="nome" class="form-control custom-input" value="<%= carro&.nome %>">
      </div>
      <div class="form-group">
        <strong>Modelo</strong>: <input type="text" name="modelo" class="form-control custom-input" value="<%= carro&.modelo %>">
      </div>
      <div class="form-group">
        <strong>Ano</strong>: <input type="number" name="ano" class="form-control custom-input" value="<%= carro&.ano %>">
      </div>

  <button type="submit" class="btn btn-primary">Enviar</button>
  <a href="/carros" class="btn btn-warning">Voltar para a lista</a>
</form>












