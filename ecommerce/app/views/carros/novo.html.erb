<section class="py-5 text-center container">
<h1>Mostrando o  Carro</h1>
<hr>
<div style="text-align:left">
  <form action="<%= carros_criar_path %>" method="POST">
    <div class="form-group">
      <strong>Nome</strong>: <input type="text" name="nome" class="form-control custom-input" >
    </div>
    <div class="form-group">
      <strong>Modelo</strong>: <input type="text" name="modelo" class="form-control custom-input" >
    </div>
    <div class="form-group">
      <strong>Ano</strong>: <input type="number" name="ano" class="form-control custom-input" >
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a href="/carros" class="btn btn-warning">Voltar para a lista</a>
  </form>
</div>

</section>